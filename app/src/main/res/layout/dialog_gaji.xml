<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/close"
        android:layout_margin="10dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_close_24"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"
            />

        <TextView
            android:textColor="#323131"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaji/Bulan"
            android:textSize="20dp"
            android:fontFamily="@font/segoeui_bold"
            />

        <TextView
            android:id="@+id/keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:textSize="12dp"
            android:textAlignment="center"
            android:text="Apakah betul ini gaji kamu per bulan? :"
            />
        <TextView
            android:id="@+id/tv_gaji"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 2.000.000"
            android:textColor="#252424"
            />

        <TextView
            android:id="@+id/tidak"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak"
            android:textSize="12dp"
            android:textColor="#DD2C00"
            android:fontFamily="@font/segoeui_bold"
            />

        <EditText
            android:id="@+id/edt_gaji"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="number"
            android:padding="5dp"
            android:hint="Gaji/Blan"
            android:background="@drawable/bg_edt"
            />

        <Button
            android:id="@+id/konfirmasi"
            android:layout_marginTop="20dp"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="Konfirmasi"
            android:textColor="#ffff"
            android:fontFamily="@font/segoeui"
            android:background="@drawable/br_bt_login"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>